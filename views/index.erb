<h2>Welcome to Shoe Distribution</h2>

<div class="row">
  <div class="col-xs-6">
    <form class="form-group" action="/stores" method="post">
      <h4>Add a new store below</h4>
      <label for="name">What is the store name?</label>
      <input type="text" name="name" value="" id='name'>
      <button type="submit" name="button" class='btn btn-info'>Add new store</button>
    </form>
  </div>

  <div class="col-xs-6">
    <form class="form-group" action="/brands" method="post">
      <h4>Add a new brand below</h4>
      <label for="brand_name">What is the brand name?</label>
      <input type="text" name="brand_name" value="" id='brand_name'>
      <button type="submit" name="button" class='btn btn-info'>Add new brand</button>
    </form>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-sm-3">
    <h3>All Listed Stores</h3>
      <% if @stores.any? %>
        <ul>
          <% @stores.each() do |store| %>
            <li><a href= "/store/<%=store.id()%>"><%= store.name()%>  </a><a href="/stores/<%= store.id() %>/edit">Edit</a></li>
          <% end %>
        </ul>
      <% else %>
        <p>There are no stores yet.</p>
      <% end %>
  </div>

  <div class="col-sm-7">
    <h3>All Listed Brands</h3>
    <% if @brands.any? %>
      <ul>
        <% @brands.each() do |brand| %>
          <li><a href="/brand/<%= brand.id()%>"><%= brand.name()%></a></li>
        <% end %>
      </ul>
    <% else %>
      <p>There are no brands yet.</p>
    <% end %>
  </div>
</div>
