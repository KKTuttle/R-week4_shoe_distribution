  <div class="row">
    <div class="col-sm-3">
      <h3>Listed Stores</h3>
      <% if @stores.any? %>
      <ul>
        <% @stores.each() do |store| %>
        <li><a href= "/store/<%=store.id()%>"><%= store.name()%>  </a><a href="/stores/<%= store.id() %>/edit">Edit</a></li>
        <% end %>
      </ul>
      <% else %>
      <p>There are no stores yet.</p>
      <% end %>
    </div>

    <div class="col-sm-7">
      <h3>Listed Brands</h3>
      <% if @brands.any? %>
      <ul>
        <% @brands.each() do |brand| %>
        <li><a href="/brand/<%= brand.id()%>"><%= brand.name()%></a></li>
        <% end %>
      </ul>
      <% else %>
      <p>There are no brands yet.</p>
      <% end %>
    </div>
  </div>
  <hr>

<h1>Stores and Brands</h1>
  <div class="content">
    <div class="brandList">
      <% @brands.each do |brand| %>
        <a href="/brand/<%= brand.id()%>"><img src="<%= brand.logo() %>" alt="" /></a>
      <% end %>
    </div>
    <div class="brandList">
      <% @stores.each do |store| %>
        <a href= "/store/<%=store.id()%>"><img src="<%= store.image() %>" alt="" /></a>
      <% end %>
    </div>
  </div>

