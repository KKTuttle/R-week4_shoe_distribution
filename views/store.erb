<h2>Welcome to <%= @store.name() %> page</h2>
<img src="<%= @store.image() %>" alt="" />

<% if @brands.any?()%>
  <form class="form-group" action="/store/<%= @store.id()%>/brand" method="post">
    <input type="hidden" name="store_id" value="<%=@store.id()%>">
    <label for="brand_id">Select the brand</label>
      <select id='brand_id' name='brand_id' type='text'>
        <% @brands.each do |brand| %>
          <option value="<%= brand.id %>"> <%= brand.name %></option>
        <% end %>
      </select>
    <button type="submit">Add Brand</button>
  </form>
<% end %>

<h3>Brands that carry <%= @store.name %> store:</h3>
  <% if @store.brands.any? %>
    <ul>
      <% @store.brands.each do |brand| %>
        <li><a href='/brand/<%= brand.id() %>'><%= brand.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>This store does not carry any brand yet.</p>
  <% end %>

  <% if @store.brands.any? %>
    <div class="content">
      <div class="brandList">
        <% @store.brands.each do |brand| %>
          <img src="<%= brand.logo() %>" alt="" />
        <% end %>
      </div>
    </div>
  <% end %>
<a href="/">Return Home</a>
