<h2>Welcome to <%= @store.name() %> edit page</h2>

<div class="row">
  <div class="col-sm-3">
    <h3>Listed Stores</h3>
    <% if @stores.any? %>
      <ul>
        <% @stores.each() do |store| %>
        <li><a href= '/stores/<%= store.id() %>'><%= store.name()%></a></li>

        <% end %>
      </ul>
    <% else %>
    <p>There are no stores yet.</p>
    <% end %>
  </div>
<!--Second Column  -->
  <div class="col-sm-9">
    <form class ='form-group' action="/stores/ <%= @store.id() %>/name" method="post">
      <input type="hidden" name="_method" value="patch">
      <!-- <input type="hidden" name="store_id" value="<%= @store.id()%>"> -->

      <label for="new_name">New name for "<%= @store.name() %>"</label>
      <input type="text" name="new_name" >
      <button type="submit" name="button">Change Name</button>
    </form>

    <form action="/stores/<%= @store.id() %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" name="button">Delete <%= @store.name()%></button>

    </form>
  </div>

</div>

<a href="/">Return Home</a>
